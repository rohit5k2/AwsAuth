<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.secure.MainActivity">

    <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name goes here"
            app:layout_constraintStart_toEndOf="@+id/username_label"
            app:layout_constraintBaseline_toBaselineOf="@+id/username_label"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/signin_status"/>

    <TextView
            android:id="@+id/signin_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sing in status goes here"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="15dp"/>

    <TextView
            android:id="@+id/identity_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identity ID"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/identity_id"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/identity_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identity Id goes here"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="12sp"
            android:maxLines="2"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/signin_status"
            app:layout_constraintStart_toStartOf="@+id/signin_status"/>

    <Button
            android:id="@+id/remember_me"
            android:layout_width="125dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            android:text="Remember"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/identity_id_label"/>

    <Button
            android:id="@+id/forget_me"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:text="Forget Me"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/remember_me"
            app:layout_constraintRight_toRightOf="parent" />

    <Button
            android:id="@+id/device_info"
            android:layout_width="125dp"
            app:layout_constraintTop_toBottomOf="@+id/remember_me"
            android:layout_margin="15dp"
            android:text="Device Info"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="60dp"/>

    <Button
            android:id="@+id/device_list"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:text="device List"
            android:layout_margin="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forget_me"/>

</androidx.constraintlayout.widget.ConstraintLayout>